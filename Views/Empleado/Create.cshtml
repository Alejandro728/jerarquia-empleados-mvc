@model JerarquiaEmpleadosMVC.Models.Empleado

@{
    ViewData["Title"] = "Agregar Empleado";
}

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0"><i class="bi bi-person-plus-fill me-2"></i>Agregar nuevo empleado</h4>
        </div>
        <div class="card-body">
            <form asp-action="Create" method="post">
                <div class="mb-3">
                    <label asp-for="Puesto" class="form-label"></label>
                    <input asp-for="Puesto" class="form-control" placeholder="Ej. Gerente, Supervisor" />
                    <span asp-validation-for="Puesto" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Nombre" class="form-label"></label>
                    <input asp-for="Nombre" class="form-control" placeholder="Nombre completo del empleado" />
                    <span asp-validation-for="Nombre" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="CodigoJefe" class="form-label">Código del Jefe (opcional)</label>
                    <input asp-for="CodigoJefe" class="form-control" placeholder="Código del jefe directo (si aplica)" />
                    <span asp-validation-for="CodigoJefe" class="text-danger small"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check-circle me-1"></i>Guardar
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-x-circle me-1"></i>Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
